@model IEnumerable<ABCD_Client.Models.Shops>

@{
    ViewBag.Title = "Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <section class="py-5 bg-light">
        <div class="container">
            <div class="row px-4 px-lg-5 py-lg-4 align-items-center">
                <div class="col-lg-6">
                    <h1 class="h2 text-uppercase mb-0">Shop</h1>
                </div>
                <div class="col-lg-6 text-lg-end">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-lg-end mb-0 px-0 bg-light">
                            <li class="breadcrumb-item"><a class="text-dark" href="@Url.Action("Index", "Home")">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Shop</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </section>

    <section class="py-5">
        <div class="container p-0">
            <div class="row">
                <div class="col-lg-12 order-1 order-lg-2 mb-5 mb-lg-0">
                    <h3 style="text-align:center">Our Brands</h3>
                    <small style="text-align:center">ABCD-Mall is the first and only luxury shopping center in Vietnam. We have more than 200 fashion brands, cosmetics, handbags, footwear, and accessories. There are over 50 leading international brands and most of the top 10 brands in the world fashion: Rolex, Cartier, Gucci, Dolce & Gabbana, Burberry, Tiffany&Co., Christian Louboutin, Salvatore Ferragamo,…</small>
                    <div class="row" style="background-color:#ffffff">
                        @foreach (var shop in Model.Take(12))
                        {
                            <!-- Products -->
                            <div class="col-lg-4 col-sm-6">
                                <div class="product text-center">
                                    <div class="mb-3 position-relative">
                                        <div class="badge text-white bg-"></div><a class="d-block" href="detail.html"><img class="img-fluid w-100" src="@Url.Content("~/img/brands/" + shop.imagePath)" alt="..."></a>
                                        <div class="product-overlay">
                                            <ul class="mb-0 list-inline">
                                                <li class="list-inline-item m-0 p-0"><a class="btn btn-sm btn-dark" href="#">@shop.shopAddress</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    @*<h6> <a class="reset-anchor" href="detail.html">@shop.shopName</a></h6>*@
                                </div>
                            </div>
                        }


                    </div>
                </div>
            </div>
        </div>
    </section>
</div>