@model ABCD_Client.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Details Products</h2>

    <div>
        <hr />

        <h4>Images</h4>

        @foreach (var image in ViewBag.Images)
        {
            <img src="@Url.Content("~/img/product/" + image.imagePath)" data-image="@Url.Content(image.imagePath)" alt="@image.id" />
        }


        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.productName)
            </dt>

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.productName)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.productDescription)
            </dt>

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.productDescription)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.price)
            </dt>

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.price)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Shop.shopName)
            </dt>

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Shop.shopName)
            </dd>
        </dl>

        <strong>
            <a href="@Url.Action("Index", "Products")">Back To List...</a>
        </strong>



    </div>

</div>
